<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="handler"
            type="com.fafabtc.app.ui.fragment.AccountFragment.AccountFragmentHandler"/>
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <TextView
                style="@style/TextDivider"
                android:text="@string/assets_group"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_account_assets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>

            <Button
                style="@style/AppButton.Colored"
                android:id="@+id/btn_create_assets"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_colored_height"
                android:text="@string/create_assets"
                android:onClick="@{handler::onClickCreateAssets}"/>

            <Button
                android:id="@+id/btn_user_feed_back"
                style="@style/AppButton.Colored"
                android:text="@string/user_feed_back"
                android:onClick="@{handler::onClickUserFeedBack}"/>
        </LinearLayout>

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:contentInsetStart="0dp"
                android:minHeight="?attr/actionBarSize">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="24dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:lines="1"
                        android:text="@string/mine"
                        android:gravity="center"
                        android:textColor="@android:color/primary_text_dark"
                        android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"/>
                </LinearLayout>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>
    </android.support.design.widget.CoordinatorLayout>

</layout>