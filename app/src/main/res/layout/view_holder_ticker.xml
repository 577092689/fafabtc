<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="java.lang.String"/>
        <import type="com.fafabtc.common.utils.NumberUtils"/>
        <variable
            name="ticker"
            type="com.fafabtc.data.model.entity.exchange.Ticker"/>
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_holder_height_tiny"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/view_holder_padding_small"
            android:background="?attr/selectableItemBackground">

            <LinearLayout
                android:id="@+id/tv_pair"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1000">

                <TextView
                    android:id="@+id/tv_base"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@android:color/primary_text_light"
                    android:text="@{ticker.base.toUpperCase()}"
                    tools:text="ETH" />

                <TextView
                    android:id="@+id/tv_quote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@android:color/secondary_text_light"
                    android:text="@{String.format(@string/ticker_quote_name_format, ticker.quote.toUpperCase())}"
                    tools:text="/USDT" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_last"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1000"
                android:fontFamily="monospace"
                android:textColor="@android:color/primary_text_light"
                android:textSize="16sp"
                android:text="@{NumberUtils.formatCurrency(ticker.last)}"
                tools:text="91134.00" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"/>

            <TextView
                android:id="@+id/tv_precent_change"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="608"
                android:paddingVertical="4dp"
                android:fontFamily="monospace"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                tools:background="@drawable/bg_tv_percent_positive"
                android:textSize="16sp"
                android:text="@{NumberUtils.formatPercent(ticker.percentChange/100)}"
                tools:text="20%" />
        </LinearLayout>
    </FrameLayout>
</layout>