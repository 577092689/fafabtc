<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppButton">
    </style>

    <style name="AppButton.Colored" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_colored_height</item>
    </style>

    <style name="AppButton.Setting" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_setting_height</item>
        <item name="background">?attr/selectableItemBackground</item>
        <item name="android:drawableRight">@drawable/ic_keyboard_arrow_right</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="AppButton.Meta">
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
        <item name="background">@color/black_overlay</item>
    </style>
</resources>